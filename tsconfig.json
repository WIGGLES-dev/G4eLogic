{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "foundry-pc-types"
        ],
        "target": "ES2015",
        "allowJs": false
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
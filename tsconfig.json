{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": [
            "ES2015"
        ],
        "types": [
            "webpack",
            "webpack-dev-server"
        ],
        "baseUrl": "./src",
        "paths": {
            "@character/*": [
                "character/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@gcs/*": [
                "gcs/*"
            ]
        },
        "target": "ES2015",
        "allowJs": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
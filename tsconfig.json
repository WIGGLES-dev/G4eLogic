{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": [
            "WebWorker",
            "DOM",
            "ES2019"
        ],
        "types": [
            "webpack-dev-server",
            "deep-diff",
            "svelte",
        ],
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "./assets/*"
            ],
            "@internal": [
                "./src/internal.ts"
            ],
            "@ui/*": [
                "./src/ui/*"
            ],
            "@components/*": [
                "./src/components/*"
            ]
        },
        "target": "ES2015",
        "allowJs": false
    },
    "include": [
        "types",
        "src",
        "test",
        "webpack"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
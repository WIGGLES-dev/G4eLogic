{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": [
            "DOM",
            "ES2019"
        ],
        "types": [
            "webpack",
            "webpack-dev-server",
            "svelte"
        ],
        "baseUrl": "./src",
        "paths": {
            "@character/*": [
                "character/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@externals/*": [
                "externals/*"
            ],
            "@ui/*": [
                "ui/*"
            ]
        },
        "target": "ES2015",
        "allowJs": false
    },
    "include": [
        "src",
        "../foundryVTT/GURPS/src/svelte/tabs"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
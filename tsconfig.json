{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "declaration": true,
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "lib": [
            "WebWorker",
            "DOM",
            "ES2020"
        ],
        "types": [
            "webpack-dev-server",
            "svelte",
            "@league-of-foundry-developers/foundry-vtt-types"
        ],
        "outDir": "./public",
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "static/assets/*"
            ],
            "@internal": [
                "src/internal.ts"
            ],
            "@app/*": [
                "src/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@plugins/*": [
                "src/plugins/*"
            ]
        }
    },
    "include": [
        "./types/**/*",
        "./src/**/*",
        "./test/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
    "files": [
        "./types/shims.d.ts"
    ]
}